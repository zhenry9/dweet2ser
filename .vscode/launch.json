    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "webapp.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true
        },
        {
            "name": "sudo dweet2ser",
            "type": "python",
            "request": "launch",
            "module": "dweet2ser",
            "sudo": true,
            /** "gevent": true **/
        },
        {
            "name": "sudo dweet2ser --empty",
            "type": "python",
            "request": "launch",
            "module": "dweet2ser",
            "sudo": true,
            "args": [
                "--empty"
            ]
        }
    ]
}